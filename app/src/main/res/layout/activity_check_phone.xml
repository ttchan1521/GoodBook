<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.CheckPhone">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_height="105dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/ic_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F4F0F5"
            android:textSize="28sp"
            android:text="Điện thoại"
            android:paddingLeft="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_height="95dp"
            android:layout_width="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8E7D7D"
                android:layout_marginTop="40dp"
                android:textSize="17sp"
                android:text="Nhận mã xác thực vừa được gửi đến số điện thoại"
                android:paddingLeft="15dp" />

            <TextView
                android:id="@+id/phone_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#302929"
                android:textSize="19sp"
                android:text="(+84) *******555"
                android:paddingLeft="15dp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_phone_verification_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/margin_25"
            android:hint="Nhập mã xác thực"
            android:layout_marginTop="15dp"
            app:startIconDrawable="@drawable/ic_baseline_edit_24">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5F3FF"
                android:background="@drawable/edittext_bottom_border"
                android:textColorHint="#616161"
                style="@style/font_text"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="15dp"
            android:layout_height="53dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Xác nhận" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>