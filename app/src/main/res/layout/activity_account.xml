<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.AccountActivity">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_height="120dp"
        android:background="#8179FF"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/ic_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F4F0F5"
            android:textSize="28sp"
            android:text="Thông tin tài khoản"
            android:paddingLeft="15dp" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:background="@drawable/shape"
        app:layout_constraintTop_toTopOf="@+id/layout_header" >

        <LinearLayout
            android:id="@+id/name"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:theme="@style/account_linear_layout" >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="305dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_label"
                    android:text="Họ và tên"/>

                <TextView
                    android:id="@+id/value_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_field"
                    android:text="Nguyễn Văn A" />

            </LinearLayout>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_arrow24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:theme="@style/account_linear_layout" >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="305dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_label"
                    android:text="Số điện thoại"/>

                <TextView
                    android:id="@+id/phone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_field"
                    android:text="*******000" />

            </LinearLayout>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_arrow24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/email"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:theme="@style/account_linear_layout" >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="305dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_label"
                    android:text="Địa chỉ email"/>

                <TextView
                    android:id="@+id/email_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_field"
                    android:text="anguyen@gmail.com" />

            </LinearLayout>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_arrow24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/password"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:theme="@style/account_linear_layout" >

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="305dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_label"
                    android:text="Mật khẩu"/>

                <TextView
                    android:id="@+id/password_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/account_field"
                    android:text="********" />

            </LinearLayout>

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_arrow24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>