<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

    <ImageView
        android:id="@+id/image_banner1"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner1"/>

    <TextView
        android:id="@+id/textView"
        style="@style/logo_text1"
        android:layout_width="87dp"
        android:layout_height="41dp"
        android:layout_marginStart="88dp"
        android:text="@string/logo1"
        app:layout_constraintBottom_toBottomOf="@+id/image_banner1"
        app:layout_constraintStart_toStartOf="@+id/image_banner1"
        app:layout_constraintTop_toTopOf="@+id/image_banner1"
        app:layout_constraintVertical_bias="0.374"
        tools:ignore="TextContrastCheck"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="87dp"
        android:layout_height="41dp"
        android:layout_marginEnd="76dp"
        style="@style/logo_text2"
        android:text="@string/logo2"
        app:layout_constraintBottom_toBottomOf="@+id/image_banner1"
        app:layout_constraintEnd_toEndOf="@+id/image_banner1"
        app:layout_constraintTop_toTopOf="@+id/image_banner1"
        app:layout_constraintVertical_bias="0.374" />

    <ImageView
        android:id="@+id/image_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/menu"
        android:src="@drawable/ic_menu_24"
        app:layout_constraintEnd_toStartOf="@+id/search_textField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_textField"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:hint="@string/search"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_menu"
        app:layout_constraintEnd_toStartOf="@+id/image_notification"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconContentDescription="@string/content_description_icon">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:background="@drawable/edittext_bottom_border"
            android:textColorHint="#616161"
            style="@style/font_text"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/image_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/notification"
        android:src="@drawable/ic_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_textField"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_banner1"
        app:layout_constraintVertical_bias="1.0"
        tools:itemCount="3"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/home_book_categories_item" />



<!--    Phần này là phần menu khi nhấn vô icon có 3 vạch kẻ ngang-->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/menu_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_menu_24"
            app:tint="@color/white"
            android:layout_margin="20dp"
            android:contentDescription="@string/menu" />


        <FrameLayout
            android:id="@+id/user_account_name_and_avt_in_menu"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/white_bottom_border"
            android:padding="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/avt1"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/uer_fullname"
                style="@style/user_fullname_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="70dp"
                tools:text="Nguyen Van A" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/saved_post_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:padding="10dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_bookmark_24"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/icon_saved"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/title_saved_post"
                style="@style/user_fullname_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:text="@string/saved" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_marginBottom="30dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/icon_saved"
                android:src="@drawable/ic_baseline_exit" />

            <TextView
                style="@style/user_fullname_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:text="@string/logout" />

        </FrameLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>