<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey_100</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.GookBook.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="MenuItems" parent="Theme.GoodBook">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="logo_text1">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#6C55FD</item>
    </style>

    <style name="logo_text2">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="font_text">
        <item name="fontFamily">@font/poppins</item>
    </style>


    <style name="styleGood">
        <item name="android:textColor">#FF6C55FD</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>


    <style name="styleBook">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="styleBack">
        <item name="android:tint">#6C63FF</item>
        <item name="android:scaleX">1.4</item>
        <item name="android:scaleY">1.4</item>
    </style>

    <style name="list_name_text">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="book_title_style">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="book_writer_style">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/orange_001</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="link_text_style">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_300</item>
    </style>

    <style name="user_fullname_style">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_profile">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#F4F0F5</item>
        <item name="android:drawableRight">@drawable/ic_arrow</item>
        <item name="android:textAllCaps">false </item>
    </style>

    <style name="account_label">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="account_field">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#0E0E0E</item>
    </style>

    <style name="account_linear_layout">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="margin_25">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>


    </style>


</resources>