<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.GookBook.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="MenuItems" parent="Theme.GoodBook">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="logo_text1">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#6C55FD</item>
    </style>

    <style name="logo_text2">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="font_text">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="button_profile">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#F4F0F5</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_arrow</item>
        <item name="android:textAllCaps">false </item>
    </style>

    <style name="account_label">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="account_field">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">#0E0E0E</item>
    </style>

    <style name="account_linear_layout">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>