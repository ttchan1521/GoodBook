<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goodbook">

    <application
        android:name=".GoodBookApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoodBook">
        <activity
            android:name=".ui.profile.AccountActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.profile.SavePostActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SavedPostActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DetailPostActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".ui.AddPostActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.forgotPassword.NewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.forgotPassword.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.PhoneActivity"
            android:exported="false"
            android:parentActivityName=".ui.profile.AccountActivity" />
        <activity
            android:name=".ui.profile.PasswordAuthentication"
            android:exported="false"
            android:parentActivityName=".ui.profile.AccountActivity" />
        <activity
            android:name=".ui.profile.ResetPassword1Activity"
            android:exported="false"
            android:parentActivityName=".ui.profile.PasswordAuthentication" />
        <activity
            android:name=".ui.profile.CheckPhone"
            android:exported="false"
            android:parentActivityName=".ui.profile.PhoneActivity" />
        <activity
            android:name=".ui.profile.ResetPassword2Activity"
            android:exported="false"
            android:parentActivityName=".ui.profile.PasswordAuthentication" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
    </application>

</manifest>
